$accentColor = #2FC6F2
$textColor = #2c3e50
$borderColor = #DCF4FC
$codeBgColor = #282c34

#main-title {
    display: none
}

.home {
    padding: 3.6rem 2rem 0;
    max-width: 1250px;
    margin: 0px auto;
    display: block;
    }


.home .hero .description {
    max-width: 50rem;
    font-size: 1.5rem;
    line-height: 1.3;
    color: #2c3e50;
        font-weight: 600;
}

.home .feature p {
    color: #2c3e50;
    font-weight: 600;
    text-align: center
}

.home .feature a{
    color: #2FC6F2;
    font-weight: 600;
    text-decoration: none;
}

.home .feature h2 {
    font-size: 1.4rem;
    font-weight: 500;
    border-bottom: none;
    padding-bottom: 0;
    color: #2c3e50;
    text-align: center;
}



.home .footer {
    padding: 2.5rem;
    border-top: 1px solid #dcf4fc;
    text-align: center;
    color: #2c3e50;
        font-weight: 600;

}

.navbar a {
    display: inline-block;
    font-weight: 600;
    color:#2c3e50;
        font-size: 0.9rem;

}

@media (max-width: 719px){
    .home .feature {
    max-width: 100%;
    padding: 0;
}
    }
